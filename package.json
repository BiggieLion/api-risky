{
  "name": "api-risky",
  "version": "0.0.1",
  "description": "API for thesis project",
  "author": "Heber Jair Le√≥n Ram√≠rez && Enrique Javet Sanchez Cerna",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "release": "release-it",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cz-emoji-conventional": "^1.0.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "release-it": "^17.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji-conventional"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": ":broom: chore(release): Release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": ":broom: v${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": ":sparkless: feat",
              "section": ":sparkless: Features"
            },
            {
              "type": ":bug: fix",
              "section": ":bug: Bug Fixes"
            },
            {
              "type": ":memo: docs",
              "hidden": true
            },
            {
              "type": ":gem: style",
              "hidden": true
            },
            {
              "type": ":recycle: refactor",
              "section": ":recycle: Code Refactoring"
            },
            {
              "type": ":chart_with_upwards_trend: perf",
              "section": ":chart_with_upwards_trend: Performance Improvements"
            },
            {
              "type": ":test_tube: test",
              "hidden": true
            },
            {
              "type": ":building_construction: build",
              "section": "üèóÔ∏è Build System"
            },
            {
              "type": ":package: ci",
              "hidden": true
            },
            {
              "type": ":broom: chore",
              "hidden": true
            },
            {
              "type": ":rewind: revert",
              "section": ":rewind: Reverts"
            }
          ]
        }
      }
    }
  }
}
